# Discord application token provided by the Developer Portal
DISCORD_TOKEN=your-bot-token-here

# Application (client) ID from the Developer Portal
DISCORD_CLIENT_ID=your-client-id-here

# Optionally register slash commands for a single guild during development
# DISCORD_GUILD_ID=your-guild-id-here

# Prefix used for text commands, e.g. !ping
COMMAND_PREFIX=!

# Mongo connection string, e.g. mongodb://localhost:27017/ascenders
MONGO_URI=mongodb://localhost:27017/ascenders

# Optional comma-separated list of superuser Discord IDs (serves as fallback until managed via commands)
SUPERUSER_IDS=

# Optional comma-separated list of admin Discord IDs
ADMIN_IDS=

# Required: declare the process manager used to restart the bot
PROCESS_MANAGER=pm2

# Optional: enable automatic git update monitoring (requires bot restart)
# GIT_AUTO_PULL_ENABLED=false
# GIT_AUTO_PULL_CHANNEL_ID=your-channel-id
# GIT_AUTO_PULL_REPOSITORY_URL=https://github.com/ArchieHarvey/Ascenders.git
# Set GIT_AUTO_PULL_REMOTE if you prefer using a configured remote name instead of the repository URL.
# GIT_AUTO_PULL_REMOTE=origin
# GIT_AUTO_PULL_BRANCH=main
# GIT_AUTO_PULL_INTERVAL_MS=300000 # milliseconds (values under 1000 treated as seconds)
# GIT_AUTO_PULL_WORKDIR=/absolute/path/to/local/repo
# GIT_AUTO_PULL_LOG_CHECKS=true
