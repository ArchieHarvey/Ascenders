# Discord application token provided by the Developer Portal
DISCORD_TOKEN=your-bot-token-here

# Application (client) ID from the Developer Portal
DISCORD_CLIENT_ID=your-client-id-here

# Optionally register slash commands for a single guild during development
# DISCORD_GUILD_ID=your-guild-id-here

# Prefix used for text commands, e.g. !ping
COMMAND_PREFIX=!

# Mongo connection string, e.g. mongodb://localhost:27017/ascenders
MONGO_URI=mongodb://localhost:27017/ascenders

# Optional comma-separated list of superuser Discord IDs (serves as fallback until managed via commands)
SUPERUSER_IDS=

# Optional comma-separated list of admin Discord IDs
ADMIN_IDS=

# Filesystem path where repository files should be written (defaults to process working directory)
REPO_PATH=

# GitHub repository to track for updates (format: owner/repo)
UPDATE_REPO_SLUG=

# Optional Git reference to track (branch, tag, or commit SHA)
UPDATE_REPO_REF=main

# Optional personal access token for GitHub (required for private repos or higher rate limits)
# GITHUB_TOKEN=

# Optional comma-separated list of top-level paths to preserve during updates
# UPDATE_PRESERVE_PATHS=node_modules,.env

# Optional text channel ID where automatic update notifications should be posted
UPDATE_CHANNEL_ID=

# Interval (in minutes) between automatic update checks (defaults to 15)
AUTO_UPDATE_INTERVAL_MINUTES=15
